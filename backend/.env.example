# ==============================================================================
# NEXUS CHECK BACKEND - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env for local development
# For production deployment on Railway, set these in the Railway dashboard
# ==============================================================================

# ------------------------------------------------------------------------------
# SUPABASE CONFIGURATION (Server-Side - KEEP SECRET!)
# ------------------------------------------------------------------------------
# Get these from: Supabase Dashboard → Settings → API
# WARNING: NEVER expose service_role_key or JWT secret client-side!

SUPABASE_URL=https://[your-project-ref].supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ------------------------------------------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------------------------------------------

# Environment mode
ENVIRONMENT=development  # Use 'production' for deployment

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Debug mode - MUST be False in production for security!
DEBUG=True  # Set to 'False' in production

# ------------------------------------------------------------------------------
# CORS CONFIGURATION
# ------------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Development: Include localhost
# Production: Add your Vercel domain(s)

# Development only:
ALLOWED_ORIGINS=http://localhost:3000

# Production (uncomment and update):
# ALLOWED_ORIGINS=https://[your-app].vercel.app,https://[your-app]-[team].vercel.app

# Both dev and production:
# ALLOWED_ORIGINS=http://localhost:3000,https://[your-app].vercel.app

# Optional: Regex pattern to allow Vercel preview deployments
# Allows all preview URLs like: https://nexuscheck-git-feature-username.vercel.app
# WARNING: Use with caution in production. Prefer explicit origins when possible.
# ALLOWED_ORIGIN_REGEX=https://.*\.vercel\.app$

# ------------------------------------------------------------------------------
# FILE UPLOAD CONFIGURATION
# ------------------------------------------------------------------------------

# Maximum file size in megabytes
MAX_FILE_SIZE_MB=50

# Upload directory (Railway uses ephemeral storage, /tmp is recommended)
UPLOAD_DIR=/tmp/uploads

# ------------------------------------------------------------------------------
# API CONFIGURATION
# ------------------------------------------------------------------------------

# API version prefix
API_V1_PREFIX=/api/v1
